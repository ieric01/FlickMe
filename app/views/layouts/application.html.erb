<!DOCTYPE html>
<html>
<head>
  <title>Flickme</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link href="//vjs.zencdn.net/5.2.2/video-js.css" rel="stylesheet">

  <!-- If you'd like to support IE8 -->
  <script src="//vjs.zencdn.net/ie8/1.1.0/videojs-ie8.min.js"></script>
</head>
<body>
  <div id="wrap">
	<nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <a class="navbar-brand" href="/">Flickme</a>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	      	<li><%= link_to 'See All Courses', courses_path %></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <% if user_signed_in? %>
	        	<li><%= link_to 'My Dashboard', 
	        	dashboard_path %></li>
	        	<li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
	        <% else %>
	        	<li><%= link_to "Sign Up", new_user_registration_path %></li>
	        	<li><%= link_to "Log In", new_user_session_path %></li>
	        <% end %>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>

	<!-- devise flash messages -->
    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

	<%= yield %>

	</div>
	<br class="clr" />

	<div id="footer">
	    <div class="container">
	       <div class="col-xs-12 col-sm-3">
	        <b>Teachers</b>
	        <br />
	        <%= link_to 'Teach a Course', new_instructor_course_path %>
	        <br />
	        <%= link_to 'My Dashboard', dashboard_path %>
	      </div>
	      <div class="col-xs-12 col-sm-3">
	        <b>About</b>
	        <br />
	        <%= link_to 'Team', '#' %>
	        <br />
	        <%= link_to 'Careers', '#' %>
	        <br />
	        <%= link_to 'Privacy Policy', '#' %>
	      </div>
	      <div class="col-xs-12 col-sm-3">
	        <b>Contact</b>
	        <br />
	       	eric@thefirehoseproject.com
	        <br />
	        New York, NY
	      </div>
	      <div class="col-xs-12 col-sm-3 social">
	        <b>Social</b>
	        <br />
	        <%= link_to "https://github.com/ieric01" do %>
	        	<%= image_tag 'github-logo.png', :class => "social-button" %>
	        <% end %>
	        <%= image_tag 'linkedIn-logo.png', :class => "social-button" %>
	        <%= image_tag 'codepen-logo.png', :class => "social-button" %>
	      </div>
	  </div>
	</div>


</body>
</html>
